        "ExterneReferenz": {
            "description": "Viele Datenobjekte weisen in unterschiedlichen Systemen eine eindeutige ID (Kundennummer, GP-Nummer etc.) auf.\nBeim Austausch von Datenobjekten zwischen verschiedenen Systemen ist es daher hilfreich,\nsich die eindeutigen IDs der anzubindenden Systeme zu merken.\n\n.. graphviz:: /api/dots/bo4e/com/ExterneReferenz.dot",
            "properties": {
                "exRefName": {
                    "title": "Exrefname",
                    "type": "string"
                },
                "exRefWert": {
                    "title": "Exrefwert",
                    "type": "string"
                }
            },
            "required": [
                "exRefName",
                "exRefWert"
            ],
            "title": "ExterneReferenz",
            "type": "object"
        },
        "Lokationstyp": {
            "description": "Gibt an, ob es sich um eine Markt- oder Messlokation handelt.",
            "enum": [
                "MALO",
                "MELO"
            ],
            "title": "Lokationstyp",
            "type": "string"
        },
        "Mengeneinheit": {
            "description": "Einheit: Messgrößen, die per Messung oder Vorgabe ermittelt werden können.",
            "enum": [
                "W",
                "WH",
                "KW",
                "KWH",
                "KVARH",
                "MW",
                "MWH",
                "STUECK",
                "KUBIKMETER",
                "STUNDE",
                "TAG",
                "MONAT",
                "JAHR",
                "PROZENT"
            ],
            "title": "Mengeneinheit",
            "type": "string"
        },
        "Verbrauch": {
            "description": "Abbildung eines zeitlich abgegrenzten Verbrauchs\n\n.. graphviz:: /api/dots/bo4e/com/Verbrauch.dot",
            "properties": {
                "enddatum": {
                    "format": "date-time",
                    "title": "Enddatum",
                    "type": "string"
                },
                "mengeneinheit": {
                    "$ref": "#/definitions/Mengeneinheit"
                },
                "obisKennzahl": {
                    "pattern": "((1)-((?:[0-5]?[0-9])|(?:6[0-5])):((?:[1-8]|99))\\.((?:6|8|9|29))\\.([0-9]{1,2})|(7)-((?:[0-5]?[0-9])|(?:6[0-5])):(.{1,2})\\.(.{1,2})\\.([0-9]{1,2}))",
                    "title": "Obiskennzahl",
                    "type": "string"
                },
                "startdatum": {
                    "format": "date-time",
                    "title": "Startdatum",
                    "type": "string"
                },
                "wert": {
                    "title": "Wert",
                    "type": "number"
                },
                "wertermittlungsverfahren": {
                    "$ref": "#/definitions/Wertermittlungsverfahren"
                }
            },
            "required": [
                "wertermittlungsverfahren",
                "obisKennzahl",
                "wert",
                "mengeneinheit"
            ],
            "title": "Verbrauch",
            "type": "object"
        },
        "Wertermittlungsverfahren": {
            "description": "Gibt an, ob es sich um eine Prognose oder eine Messung handelt, beispielsweise bei der Abbildung eines Verbrauchs.",
            "enum": [
                "PROGNOSE",
                "MESSUNG"
            ],
            "title": "Wertermittlungsverfahren",
            "type": "string"
        }
    },
    "description": "Abbildung von Mengen, die Lokationen zugeordnet sind\n\n.. graphviz:: /api/dots/bo4e/bo/Energiemenge.dot",
    "properties": {
        "boTyp": {
            "allOf": [
                {
                    "$ref": "#/definitions/BoTyp"
                }
            ],
            "default": "ENERGIEMENGE"
        },
        "energieverbrauch": {
            "items": {
                "$ref": "#/definitions/Verbrauch"
            },
            "minItems": 1,
            "title": "Energieverbrauch",
            "type": "array"
        },
        "externeReferenzen": {
            "default": [],
            "items": {
                "$ref": "#/definitions/ExterneReferenz"
            },
            "title": "Externereferenzen",
            "type": "array"
        },
        "lokationsId": {
            "title": "Lokationsid",
            "type": "string"
        },
        "lokationstyp": {
            "$ref": "#/definitions/Lokationstyp"
        },
        "versionstruktur": {
            "default": "2",
            "title": "Versionstruktur",
            "type": "string"
        }
    },
    "required": [
        "lokationsId",
        "lokationstyp",
        "energieverbrauch"
    ],
    "title": "Energiemenge",
    "type": "object"
}
